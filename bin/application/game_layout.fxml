<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane fx:id="rootGridPane" style="-fx-background-color: D9F7F0;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
  <columnConstraints>
    <ColumnConstraints />
    <ColumnConstraints maxWidth="296.0" minWidth="226.0" prefWidth="226.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints maxHeight="36.0" minHeight="12.0" prefHeight="26.0" />
    <RowConstraints />
  </rowConstraints>
   <children>
      <Pane GridPane.columnSpan="2" />
      <Pane fx:id="insertedDiscPane" prefHeight="400.0" prefWidth="200.0" GridPane.rowIndex="1" />
      <VBox style="-fx-background-color: #2B3B4C;" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <children>
            <Pane fx:id="insertNamePane" prefHeight="159.0" prefWidth="226.0">
               <children>
                  <TextField fx:id="playerOneName" alignment="CENTER" layoutX="33.0" layoutY="43.0" promptText="Player One">
                     <font>
                        <Font name="System Bold Italic" size="12.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="playerTwoName" alignment="CENTER" layoutX="33.0" layoutY="81.0" promptText="Player Two">
                     <font>
                        <Font name="System Bold Italic" size="12.0" />
                     </font>
                  </TextField>
                  <Button fx:id="setNameButton" layoutX="78.0" layoutY="122.0" mnemonicParsing="false" text="Set Name">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
            </Pane>
            <Region prefHeight="26.0" prefWidth="226.0" VBox.vgrow="ALWAYS" />
            <Label fx:id="entryMessageLabel" alignment="CENTER" text="  Enter Player's Name" textFill="#f8f4f4">
               <font>
                  <Font name="System Bold Italic" size="21.0" />
               </font>
            </Label>
            <Label fx:id="playerNameLabel" alignment="CENTER" prefHeight="38.0" prefWidth="300.0" text="Player One" textFill="WHITE">
               <font>
                  <Font name="System Bold Italic" size="26.0" />
               </font>
            </Label>
            <Label fx:id="turnLabel" alignment="CENTER" prefHeight="36.0" prefWidth="301.0" text="Turn" textFill="#fffafa">
               <font>
                  <Font size="21.0" />
               </font>
            </Label>
            <Region prefHeight="200.0" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </children>
</GridPane>
